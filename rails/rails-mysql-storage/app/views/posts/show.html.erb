<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<% if @post.header_image.attached? then %>
  <p>
    <%= image_tag @post.header_image.variant(resize: "600x500") %>
  </p>
<% else %>
  <p> No header image. </p>
<% end %>

  <strong>Body:</strong>
  <%= @post.body %>
</p>

